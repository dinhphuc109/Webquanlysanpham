
@model IEnumerable<SanPham_NhaCungCap>
@{
    ViewData["Title"] = "Index";
}

@if(TempData["Thanh cong"] != null){

    <h2>@TempData["Thanh cong"]</h2>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Danh Sach LuuTruSP_NCC</h2>
        </div>
        <div class="col-6">
            <a asp-controller="SanPham_NhaCungCap" asp-action="Create" class="btn btn-primary">Tao SP_NCC</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                San Pham
            </th>
            <th>
                Nha Cung Cap
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.SanPhamID
                </td>
                <td width="50%">
                    @obj.NCCID
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="SanPham_NhaCungCap" asp-action="Edit" asp-route-id="@obj.ID" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                </td>
                                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="SanPham_NhaCungCap" asp-action="Delete" asp-route-id="@obj.ID" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


