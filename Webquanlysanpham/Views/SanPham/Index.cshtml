@model IEnumerable<SanPham>
@{
    ViewData["Title"] = "Index";

}

@if(TempData["Thanh cong"] != null){

    <h2>@TempData["Thanh cong"]</h2>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Danh Sach San Pham</h2>
        </div>
        <div class="col-6">
            <a asp-controller="SanPham" asp-action="Create" class="btn btn-primary">Tao San Pham</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Ma SP
            </th>
            <th>
                Ten SP
            </th>
            <th>
                Loai SP
            </th>
            <th>
                Mo ta
            </th>
            <th>
                So Luong
            </th>
            <th>
                Gia
            </th>
            <th>
                Don vi Tinh
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.MaSP
                </td>
                <td width="50%">
                    @obj.TenSP
                </td>
                <td width="50%">
                    @obj.LoaiSP
                </td>
                <td width="50%">
                    @obj.MoTa
                </td>
                <td width="50%">
                    @obj.SoLuongSP
                </td>
                <td width="50%">
                    @(string.Format("{0:c}", Math.Round(@obj.GiaSP, 2)))
                </td>
                <td width="50%">
                    @obj.DvtID
                </td>
                <td>

                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="SanPham" asp-action="Edit" asp-route-id="@obj.ID" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                </td>
                                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="SanPham" asp-action="Delete" asp-route-id="@obj.ID" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
